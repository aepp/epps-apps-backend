{
  "name": "epps-apps-backend",
  "version": "0.3.1",
  "main": "index.js",
  "repository": "git@github.com:aepp/epps-apps-backend.git",
  "author": "Aleksandr Epp <info@epps-apps.com>",
  "license": "MIT",
  "engines": {
    "node": ">=10.15.0"
  },
  "scripts": {
    "_build": "webpack --config ./config/webpack.$NODE_ENV.js",
    "build:dev": "NODE_ENV=development yarn _build",
    "build:prod": "NODE_ENV=production yarn _build",
    "start": "node dist_server/main",
    "dev:docker": "nodemon dist_server/main",
    "dev": "nodemon -r dotenv/config dist_server/main.js dotenv_config_path=./docker/.env.development",
    "_docker:start": "docker compose --env-file docker/.env.${NODE_ENV} -f docker/docker-compose.${NODE_ENV}.yml up -d",
    "_docker:stop": "docker compose --env-file docker/.env.${NODE_ENV} -f docker/docker-compose.${NODE_ENV}.yml down",
    "_docker:restart": "docker compose --env-file docker/.env.${NODE_ENV} -f docker/docker-compose.${NODE_ENV}.yml restart",
    "dev:up": "NODE_ENV=development yarn _docker:start",
    "dev:down": "NODE_ENV=development yarn _docker:stop",
    "dev:restart": "NODE_ENV=development yarn _docker:restart",
    "prettier": "prettier 'src/**/*.{js,ts}'",
    "p": "yarn prettier --write",
    "p:write": "yarn p",
    "p:check": "yarn prettier --check",
    "p:c": "yarn p:check",
    "p:watch": "onchange 'src/**/*.{js,ts}' -- prettier --write {{changed}}",
    "p:w": "yarn p:watch"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/cookie-session": "^2.0.43",
    "@types/express": "^4.17.0",
    "@types/node": "^12.6.8",
    "@types/passport": "^1.0.7",
    "@types/passport-github2": "^1.2.5",
    "@types/passport-twitter": "^1.0.37",
    "@types/uuid": "^8.3.1",
    "@types/webpack-env": "^1.14.0",
    "clean-webpack-plugin": "^3.0.0",
    "nodemon": "^2.0.12",
    "prettier": "^1.19.1",
    "ts-loader": "^6.0.4",
    "typescript": "^3.5.3",
    "webpack": "^4.36.1",
    "webpack-cli": "^3.3.6",
    "webpack-merge": "^4.2.1",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "apollo-server": "^2.7.0",
    "connect-mongo": "^4.5.0",
    "cookie-parser": "^1.4.5",
    "cookie-session": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express-session": "^1.17.2",
    "graphql": "^14.4.2",
    "mongoose": "^5.13.7",
    "passport": "^0.4.1",
    "passport-github2": "^0.1.12",
    "passport-oauth": "^1.0.0",
    "passport-twitter": "^1.0.4",
    "uuid": "^8.3.2"
  }
}
